#include <iostream>
#include <math.h>
#include <iomanip>

using namespace std;

int main() {
  // Данные в задаче переменные
  double m, k = 8, g = 9.8; 
  // переменные для произвдения
  double frstUmn, scndUmn; 
  // ввод массы прыгуна 
  cout << "Введите массу прыгуна: ";
  cin >> m;
  
  for(double t = 0; t <=5; ){
    
    frstUmn = sqrt( (g * m) / k);
    scndUmn = tanh(t * (sqrt( (g * k) / m) ) );
    
    cout << setprecision(3) << "v= " << frstUmn * scndUmn << "\t"; 
    cout << setprecision(2) << fixed << "t= " << t << endl;

    //условие для разного прибавления времени
    if(t < 1) {
      t += 0.25;
    } else {
        ++t;  
    }
  }
return 0;
}
